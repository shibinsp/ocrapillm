# PostgreSQL Database Configuration
# Copy this file to .env and update values as needed

# Database Connection Settings
# DB_HOST=127.0.0.1
DB_HOST=localhost
DB_PORT=5432
DB_NAME=LLMAPI
DB_USER=postgres
# DB_PASSWORD=shibin
DB_PASSWORD=sai

# Database URL (alternative format)
# DATABASE_URL=postgresql://postgres:shibin@127.0.0.1:5432/LLMAPI
DATABASE_URL=postgresql://postgres:sai@localhost:5432/LLMAPI


# Connection Pool Settings (optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# SSL Settings (for production)
DB_SSL_MODE=prefer

# Migration Settings
MIGRATION_AUTO_RUN=false
MIGRATION_BACKUP_BEFORE=true