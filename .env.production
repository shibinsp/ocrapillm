# Sentry Configuration for Production
SENTRY_DSN=

# Environment
ENVIRONMENT=production

# Frontend Sentry DSN
REACT_APP_SENTRY_DSN=

# Database Configuration for Production
# DATABASE_URL=postgresql://username:password@prod-db:5432/ocrapillm_prod

# API Configuration
# MISTRAL_API_KEY=your-production-mistral-api-key
# OPENAI_API_KEY=your-production-openai-api-key
# GOOGLE_CLOUD_VISION_API_KEY=your-production-google-cloud-vision-key

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs

# Stage-wise Configuration
STAGE=production
DEBUG=false
LOG_LEVEL=WARNING

# Performance Settings
MAX_WORKERS=4
TIMEOUT=600

# Security Settings
CORS_ORIGINS=https://yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# SSL Configuration
SSL_REDIRECT=true
SECURE_COOKIES=true