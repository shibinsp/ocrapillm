# Production Environment Configuration for aaPanel Deployment
# Copy this file to .env and configure the values for your production environment

# Environment
ENVIRONMENT=production

# Database Configuration (PostgreSQL in Docker)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ocr_database
DB_USER=ocr_user
DB_PASSWORD=your_secure_password_here

# API Keys
MISTRAL_API_KEY=your_mistral_api_key_here
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# Frontend Configuration
FRONTEND_URL=https://your-domain.com
PRODUCTION_DOMAIN=your-domain.com

# CORS Configuration for aaPanel
# Set to "true" to allow all origins (use with caution)
ALLOW_ALL_ORIGINS=false

# Sentry Configuration (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Security
DEBUG=false

# File Upload Limits
MAX_FILE_SIZE=100MB

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging
LOG_LEVEL=INFO

# aaPanel Specific Settings
# These are used by the NGINX proxy configuration
API_PREFIX=/api
STATIC_FILES_PATH=/var/www/html

# Docker Compose Settings
COMPOSE_PROJECT_NAME=ocr_app

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Performance Settings
WORKER_PROCESSES=2
MAX_CONCURRENT_UPLOADS=3
REQUEST_TIMEOUT=300

# SSL Configuration (if using HTTPS)
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key